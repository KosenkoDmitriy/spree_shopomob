<% content_for :page_title do %>
  <%= Spree.t("sm.about") %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%#= link_to_edit @about, :icon => 'icon-edit', :id => 'admin_new_about' %>
	<% if @item.present? %>
	      <%= button_link_to Spree.t(:edit), edit_admin_about_url(@item), { :icon => 'icon-plus', :id => 'admin_new_product' } %>
	<% else %>
	      <%= button_link_to Spree.t(:add), new_admin_about_url, { :icon => 'icon-plus', :id => 'admin_new_product' } %>
	<% end %>
  </li>
<% end if can? :new, Spree::About.new %>

<%#= debug(@about)%>

<% if @item %>
    <h2><%= @item.try(:title) %></h2>

	<p class="review_title_field">
    <%#= Spree.t(:title) %>
    <%= @item.text %>
	</p>

    <% @item.try(:pictures).try(:each) do |picture| %>
        <%=image_tag picture.try(:image).try(:url, :thumb)%>
    <% end %>
<% end %>