<%= form_for admin, :url => new_admin_about_url, :html => {:method => :post} do
|f| %>
  <p class="review_text_field">
    <%= f.label :image_Name %>
    <%= f.text_field :imageName %>
  </p>
  <p class="review_title_field">
    <%= f.label :title %>
    <%= f.text_field :title%>
  </p>
  <p class="review_text_field">
    <%= f.label :text %>
    <%= f.text_field :text %>
  </p>
 
 <p class="form-buttons">
    <%#= f.submit Spree. t("update") %> <%= t('or') %> <%= link_to t('cancel'), "/admin/about" %>
  </p>
  
  <p class="about_submit">
    <%#= f.submit I18n.t('about_submit') %>
</p>
<% end %>
