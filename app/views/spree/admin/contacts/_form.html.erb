<%= form_for [:admin, @item], :html => { :class => 'form-horizontal', multipart: true } do |f| %>
    <%= f.field_container :contact_type do %>
        <%= f.label :contact_type, Spree.t("sm.contact_type") %> <span class="required">*</span><br />
        <%#= f.text_field :contact_type, :class => 'fullwidth title' %>
        <%= f.select :contact_type, @contact_types, {}, {:class => 'select2 fullwidth'} %>
        <%= f.error_message_on :contact_type %>
    <% end %>

    <%= f.field_container :key do %>
        <%= f.label :key, Spree.t('sm.contact_name') %> <span class="required">*</span><br />
        <%= f.text_field :key, :class => 'fullwidth title' %>
        <%= f.error_message_on :key %>
    <% end %>

    <%= f.field_container :value do %>
        <%= f.label :value, Spree.t("sm.contact_value") %> <span class="required">*</span><br />
        <%= f.text_field :value, :class => 'fullwidth title' %>
        <%= f.error_message_on :value %>
    <% end %>

    <div class="control-group">
      <%= f.label :pictures, :class => 'control-label' %>
      <div class="controls">
        <!-- The magic is coming ...look at my eyes....shazammmm -->
        <!-- Use HTML5 multiple attribute to enable multiple selection
             and pass back to controller all files as an array, ready
             for paperclip!!
             file_field_tag, since images is not a gallery attribute
         -->
        <%= file_field_tag "images[]", type: :file, multiple: true %>
      </div>
    </div>
<br/>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>

    <!--<div class="form-actions">-->
      <!--<%= f.submit nil, :class => 'btn btn-primary' %>-->
      <%#= link_to t('.cancel', :default => t("helpers.links.cancel")), admin_contacts_path, :class => 'btn btn-mini' #%>
    <!--</div>-->
<% end %>