<% content_for :page_title do %>
  <%= Spree.t(:new_sync) %>
<% end %>

<%= render :partial => 'spree/admin/shared/shopomob_sub_menu' %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_sync_list), collection_url, :icon => 'icon-arrow-left' %></li>
  <% if can?(:create, News) %>
    <li id="new_product_link">
      <%= button_link_to Spree.t(:new_sync), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_product' } %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @newsItem } %>

<fieldset data-hook="new_product">
	<legend align="center"><%= Spree.t(:new_sync) %></legend>
	<%= render 'form', { :admin => @newsItem } %>
</fieldset>