<% content_for :page_title do %>
  <%= Spree.t(:edit_sync) %> "<%= @newsItem.try(:title) %>" 
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_sync_list), collection_url, :icon => 'icon-arrow-left' %></li>
  <% if can?(:create, Spree::Sync) %>
    <li id="new_product_link">
      <%= button_link_to Spree.t(:new_sync), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_product' } %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'spree/admin/shared/shopomob_sub_menu' %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @contact } %>

<%= form_for [:admin, @newsItem], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_product">

    <legend align="center"><%= Spree.t(:edit_sync) %></legend>
  
 	<%= f.field_container :title do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span><br />
      <%= f.text_field :title, :class => 'fullwidth title' %>
      <%= f.error_message_on :title %>
    <% end %>
	
	<%= f.field_container :text do %>
      <%= f.label :text, Spree.t(:text) %> <span class="required">*</span><br />
      <%= f.text_area :text, {:rows => 10, :class => 'fullwidth text'} %>
      <%= f.error_message_on :text %>
    <% end %>
	
	<%= f.field_container :app_id do %>
      <%= f.label :app_id, Spree.t(:app_id) %> <span class="required">*</span><br />
      <%= f.text_field :app_id, :class => 'fullwidth :app_id' %>
      <%= f.error_message_on :app_id %>
    <% end %>

	<%= f.field_container :options do %>
      <%= f.label :options, Spree.t(:sync_options) %> <span class="required">*</span><br />
      <%= f.text_field :options, :class => 'fullwidth options', :value => 'all' %>
      <%= f.error_message_on :options %>
    <% end %>

    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>

  </fieldset>
<% end %>