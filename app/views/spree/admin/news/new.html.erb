<% content_for :page_title do %>
  <%= Spree.t("sm.add_news") %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t("sm.back_to_news_list"), collection_url, :icon => 'icon-arrow-left' %></li>
  <% if can?(:create, Spree::News) %>
    <li id="new_product_link">
      <%= button_link_to Spree.t("sm.add_news"), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_product' } %>
    </li>
  <% end %>
<% end %>

<%#= render 'form', { :news => @newsItem } %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @item } %>

<%if @item %>
    <%= form_for [:admin, @item], :html => { :class => 'form-horizontal', multipart: true } do |f| %>
        <fieldset>
          <!--<legend align="center"><%= Spree.t("spree.sm.add_news") %></legend>-->
          <%= render :file => 'spree/admin/news/_form' , :locals => { :f => f } %>
          <%= render :partial => 'spree/admin/shared/new_resource_links' %>
        </fieldset>
    <% end %>
<% end %>