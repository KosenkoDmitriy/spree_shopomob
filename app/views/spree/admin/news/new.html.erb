<% content_for :page_title do %>
  <%= Spree.t(:add_news) %>
<% end %>

<%= render :partial => 'spree/admin/shared/shopomob_sub_menu' %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:back_to_news_list), collection_url, :icon => 'icon-arrow-left' %></li>
  <% if can?(:create, News) %>
    <li id="new_product_link">
      <%= button_link_to Spree.t(:add_news), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_product' } %>
    </li>
  <% end %>
<% end %>

<%#= render 'form', { :news => @newsItem } %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @newsItem } %>

<%= form_for [:admin, @newsItem], :html => { :multipart => true } do |f| %>
  <fieldset data-hook="new_product">

    <legend align="center"><%= Spree.t(:adding_news) %></legend>
  
  <%= f.field_container :title do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span><br />
      <%= f.text_field :title, :class => 'fullwidth title' %>
      <%= f.error_message_on :title %>
    <% end %>
	
	<%= f.field_container :text do %>
      <%= f.label :text, Spree.t(:text) %>
      <%= f.text_area :text, {:rows => 10, :class => 'fullwidth'} %>
      <%= f.error_message_on :text %>
    <% end %>

    <%= render :partial => 'spree/admin/shared/new_resource_links' %>

  </fieldset>
<% end %>